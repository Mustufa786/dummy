<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="cardView">
        <item name="android:background">@color/dullWhileOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/curve_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BackgroundStyle" parent="android:Widget.Material.Light.ScrollView">
        <item name="android:background">#e4e4e4</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/background_grad</item>-->
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:elevation">1dp</item>


    </style>

</resources>
